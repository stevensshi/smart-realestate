html

  head
    title= title
    link(rel='stylesheet', href='/bootstrap-3.3.7-dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap-3.3.7-dist/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    block head

  body
    .navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            img(alt="Smart Zillow" src="/logo.png" style="height: auto; width: auto; max-width: 300px; max-height: 20px;")

        .navbar-collapse.collapse
          form.navbar-form.navbar-left
            .form(method="get", action="/search", id="search")
              input(id="nav-search-box", name="search_text", type="text", class="form-control", placeholder="Search", value=query, onKeyPress="return checkSubmit(event)")
 
          ul.nav.navbar-nav.navbar-right
            li
              if logged_in_user
                a(href='/logout') Log out
              else
                a(href='/login') Sign in

    .container-fluid(style="margin-top: 80px;")
      .row
        .col-md-2

        .col-md-8.main
          block content

        .col-md-2
      .row
        .container
          .row
            hr
            .col-lg-12
              .col-md-8
                p Terms of Service | Privacy
              .col-md4
                .muted.pull-right
                  p Â© 2016 Smart Zillow. All rights reserved.

    script.
      function checkSubmit(e) {
         if(e && e.keyCode == 13) {
            document.forms[0].submit();
         }
      }
    block js_script
